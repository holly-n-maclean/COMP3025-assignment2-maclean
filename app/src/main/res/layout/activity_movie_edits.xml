<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/movie_edit_view_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/movie_title_field_text"
            android:inputType="text" />

        <Button
            android:id="@+id/fetchButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fetch_movie_button_text"
            android:layout_marginTop="@dimen/fetch_button_margin_top" />

        <EditText
            android:id="@+id/yearInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/year_input_field_text"
            android:inputType="number" />

        <EditText
            android:id="@+id/directorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/director_field_text"
            android:inputType="text" />

        <EditText
            android:id="@+id/ratingInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rating_field_text"
            android:inputType="text" />

        <EditText
            android:id="@+id/posterUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/poster_url_field_text"
            android:inputType="textUri" />

        <Button
            android:id="@+id/saveButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_button_text"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/cancelButton"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_edit_screen_text" />

    </LinearLayout>
</ScrollView>